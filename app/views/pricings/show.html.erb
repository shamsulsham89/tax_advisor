<%- model_class = Pricing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:month) %>:</strong></dt>
  <dd><%= @pricing.month %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time_period) %>:</strong></dt>
  <dd><%= @pricing.time_period %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
  <dd><%= @pricing.rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <% if @pricing.status %>
    <dd>Active</dd>
  <% else %>
    <dd>Inactive</dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
    pricings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
    edit_pricing_path(@pricing), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
    pricing_path(@pricing),
    :method => 'delete',
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
    :class => 'btn btn-danger' %>
</div>
